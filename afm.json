                    "passphrase": {
                        "ciphertext": "ZjVmNQ==",
                        "protected": "eyJhbGciOiJkaXIiLCJlbmMiOiJub25lIn0"
                    }
                },               
                "Juice_Shop_App_Pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [{
                        "servicePort": 3000,
                        "serverAddresses": [
                            "10.1.20.225"
                        ]
                    }]
                },
                "fwSecurityLogProfile": {
                    "class": "Security_Log_Profile",
                    "network": {
                        "publisher": {
                            "use": "fwLogPublisher"
                        },
                        "storageFormat": {
                            "fields": [
                                "action",
                                "dest-ip",
                                "dest-port",
                                "src-ip",
                                "src-port"
                            ]
                        },
                        "logTranslationFields": true,
                        "logTcpEvents": true,
                        "logRuleMatchRejects": true,
                        "logTcpErrors": true,
                        "logIpErrors": true,
                        "logRuleMatchDrops": true,
                        "logRuleMatchAccepts": true
                    }
                },
                "fwLogDestinationSyslog": {
                    "class": "Log_Destination",
                    "type": "splunk",
                    "forwardTo": {
                        "use": "fwLogDestinationHsl"
                    }
                },
                "fwLogDestinationHsl": {
                    "class": "Log_Destination",
                    "type": "remote-high-speed-log",
                    "protocol": "tcp",
                    "pool": {
                        "use": "hsl_pool"
                    }
                },
                "hsl_pool": {
                    "class": "Pool",
                    "members": [
                        {
                            "serverAddresses": [
                                "10.1.20.12"
                            ],
                            "enable": true,
                            "servicePort": 8018
                        }
                    ],
                    "monitors": [
                        {
                            "bigip": "/Common/tcp"
                        }
                    ]
                },
                "fwLogPublisher": {
                    "class": "Log_Publisher",
                    "destinations": [
                        {
                            "use": "fwLogDestinationSyslog"
                        }
                    ]
                },
                "Juice_Shop_App_Firewall_Policy": {
                    "rules": [{
                        "use": "Juice_Shop_App_Firewall_Rule_List"
                    }],
                    "class": "Firewall_Policy"
                },
                "Juice_Shop_App_Firewall_Allowed_Address_List": {
                    "class": "Firewall_Address_List",
                    "addresses": [
                        "10.0.0.0/8",
                        "172.20.0.0/16",
                        "192.168.0.0/16"
                    ]
                },
                "Juice_Shop_App_Firewall_Rule_List": {
                    "class": "Firewall_Rule_List",
                    "rules": [{
                            "loggingEnabled": true,
                            "protocol": "tcp",
                            "name": "tcpAllow",
                            "destination": {
                                "portLists": [{
                                    "use": "Juice_Shop_App_Firewall_Allowed_Port_List"
                                }]
                            },
                            "source": {
                                "addressLists": [{
                                    "use": "Juice_Shop_App_Firewall_Allowed_Address_List"
                                }]
                            },
                            "action": "accept"
                        },
                        {
                            "action": "drop",
                            "protocol": "any",
                            "loggingEnabled": true,
                            "name": "defaultDeny",
                            "source": {
                                "addressLists": [{
                                    "use": "fwDefaultDenyAddressList"
                                }]
                            }
                        }
                    ]
                },
                "Juice_Shop_App_Firewall_Allowed_Port_List": {
                    "class": "Firewall_Port_List",
                    "ports": [
                        22,
                        80,
                        443
                    ]
                },
                "fwDefaultDenyAddressList": {
                    "class": "Firewall_Address_List",
                    "addresses": [
                        "0.0.0.0/0"
                    ]
                }
            }
        }
    }
}
 