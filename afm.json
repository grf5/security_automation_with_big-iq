{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-appsvcs-extension/master/schema/3.18.0/as3-schema.json",
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.0.0",
        "id": "agility2020-3929jfas9jdf29f",
        "label": "Web App",
        "remark": "An HTTPS web application with an AFM policy",
        "target": {
            "address": "10.1.1.4"
        },
        "controls": {
            "trace": true
        },
        "Juice_Shop": {
            "class": "Tenant",
            "label": "Juice Shop App",
            "Juice_Shop_App": {
                "class": "Application",
                "template": "https",
                "serviceMain": {
                    "class": "Service_HTTPS",
                    "virtualAddresses": [
                        "10.1.10.11"
                    ],
                    "policyFirewallEnforced": {
                        "use": "Juice_Shop_App_Firewall_Policy"
                    },
                    "pool": "Juice_Shop_App_Pool",
                    "snat": "auto",
                    "securityLogProfiles": [ {
                        "use": "fwSecurityLogProfile"
                        } ],   
                    "serverTLS": "Juice_Shop_App_TLS"
                },
                "Juice_Shop_App_TLS": {
                    "class": "TLS_Server",
                    "certificates": [{
                        "certificate": "Juice_Shop_App_Cert"
                    }]
                },
                "Juice_Shop_App_Cert": {
                    "class": "Certificate",
                    "remark": "in practice we recommend using a passphrase",
                    "certificate": "-----BEGIN CERTIFICATE-----\\n-----END CERTIFICATE-----",
